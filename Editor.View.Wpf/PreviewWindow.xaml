<mah:MetroWindow x:Class="Editor.View.Wpf.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Editor.View.Wpf"
        xmlns:ctrl="clr-namespace:Editor.View.Wpf.Controls"
        xmlns:vm="clr-namespace:Editor.ViewModel;assembly=Editor.ViewModel"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Preview" Height="450" Width="800"
        d:DataContext="{d:DesignInstance vm:PreviewViewModel}">
    <Grid>
        <ctrl:EditorView DataContext="{Binding Editor}"/>
    </Grid>
</mah:MetroWindow>
