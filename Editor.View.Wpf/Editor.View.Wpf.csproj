    <ItemGroup>
      <ProjectReference Include="..\Editor.ViewModel\Editor.ViewModel.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Page Update="Controls\Toolbar\ToolBar.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
      <Page Update="Resources\Styles\Styles.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
    </ItemGroup>

</Project>
