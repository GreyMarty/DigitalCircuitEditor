<local:EditorElement x:Class="Editor.Core.Wpf.Views.GhostDiagramNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Editor.Core.Wpf.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:vm="clr-namespace:Editor.Core.Wpf.ViewModels.DesignTime"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:DiagramNodeViewModel, IsDesignTimeCreatable=true}"
             Panel.ZIndex="1">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/Editor.xaml"/>
    </UserControl.Resources>
    
    <Grid>
        <Ellipse
            Fill="{Binding Fill, Converter={StaticResource ColorToBrushConverter}, UpdateSourceTrigger=PropertyChanged}"
            Width="{StaticResource Unit}"
            Height="{StaticResource Unit}"/>
        <Ellipse
            Stroke="{Binding Stroke,Converter={StaticResource ColorToBrushConverter}, UpdateSourceTrigger=PropertyChanged}"
            StrokeThickness="{StaticResource StrokeThickness}"
            StrokeDashArray="2.0 3.0"
            Opacity="0.5"
            Width="{StaticResource Unit}"
            Height="{StaticResource Unit}"/>
    </Grid>
</local:EditorElement>
