<local:EditorElement x:Class="Editor.Core.Wpf.Views.GhostConnectionLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Editor.Core.Wpf.Views"
             xmlns:vm="clr-namespace:Editor.Core.ViewModels;assembly=Editor.Core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance vm:ConnectionViewModel}">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/Editor.xaml"/>
    </UserControl.Resources>
    
    <Line
        X1="0" Y1="0"
        X2="{Binding OffsetPixelsX, UpdateSourceTrigger=PropertyChanged}"
        Y2="{Binding OffsetPixelsY, UpdateSourceTrigger=PropertyChanged}"
        Stroke="{Binding Stroke, Converter={StaticResource ColorToBrushConverter}, UpdateSourceTrigger=PropertyChanged}"
        StrokeThickness="{StaticResource StrokeThickness}"
        StrokeDashArray="2.0 3.0"
        Opacity="0.5"/>
</local:EditorElement>
